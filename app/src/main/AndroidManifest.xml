<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="danilbiktashev.aidadok">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--splash screen-->
        <activity
            android:name=".architecture.presentation_layer.splash_screen.SplashScreen"
            android:theme="@style/SplashTheme" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!--логин или авторизация-->
        <activity
            android:name=".architecture.presentation_layer.authentication.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>


        <activity
            android:name=".architecture.presentation_layer.main_content.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".ResultActivity"
            android:label="@string/title_activity_result"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ChooseSymptomActivity"
            android:label="@string/title_activity_choose_symptom"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CallDoctorActivity"
            android:label="@string/title_activity_call_doctor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EndOfSymptomActivity"
            android:label="@string/title_activity_end_of_symptom"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>